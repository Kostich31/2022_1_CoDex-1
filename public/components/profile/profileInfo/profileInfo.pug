.profile-info__avatar
    .profile-info__avatar__input
        img(class="avatar" style=`background-image: url(/server/images${imgsrc}` accept=".webp .jpg, .jpeg, .png, .svg")
        input(class="change__avatar" type ="file" accept=".webp .jpg, .jpeg, .png, .svg")
.profile-info__name
    span.name #{username}
.profile-info__container
    if isThisUser
        .profile-info__container__settings Изменить
        .profile-info__container__settings__form
            a Имя
            input(type="text" class='profile-info__container__settings__form__name-input' placeholder=" Введите новое имя")
            a Пароль
            input(type="text" class='profile-info__container__settings__form__password-input' placeholder=" Введите новый пароль")
            .profile-info__container__settings__form__button
                input(type="button" class='profile-info__container__settings__form__button-input' value='Сохранить') 
                input(type="button" class='profile-info__container__settings__form__button-input' value='Отменить')
